{
  "name": "crf-ts-template",
  "version": "1.0.0",
  "description": "Cloud Run Functions TypeScript Template",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch --clear-screen=false node_modules/@google-cloud/functions-framework/build/src/main.js --target=helloWorld --source=src/index.ts",
    "deploy": "npm run build && gcloud functions deploy my-function-name --gen2 --runtime=nodejs24 --region=asia-northeast1 --source=. --entry-point=streamHello --trigger-http --allow-unauthenticated",
    "lint": "biome check src",
    "fix": "biome check --write src",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@google-cloud/functions-framework": "^4.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "biome check --write"
    ]
  }
}
